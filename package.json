    "tslib": "^2.8.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vitest": "^2.1.4"
  },
  "type": "module",
  "dependencies": {
    "@fontsource-variable/fira-code": "^5.0.18",
    "@fontsource/luckiest-guy": "^5.1.0",
    "culori": "^4.0.1"
